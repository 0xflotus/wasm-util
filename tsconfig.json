{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNEXT",
    "noImplicitAny": false,
    "sourceMap": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
        "dom",
        "es6"
    ],
    "noEmitOnError": true,
    "outDir": "build",
    "declaration": true,
    "pretty": true,
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts"
  ]
}
